# CineScopeAnalyzer - Environment Variables Template
# Copy this to .env and fill in your actual values

# ============ API KEYS ============
# OMDB API Key (get from http://www.omdbapi.com/apikey.aspx)
OMDB_API_KEY=your_omdb_api_key_here

# TMDB API Key (get from https://www.themoviedb.org/settings/api)
TMDB_API_KEY=your_tmdb_api_key_here

# Reddit API Credentials (get from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=CineScopeAnalyzer/2.0

# ============ DATABASE ============
# MongoDB Atlas Connection String (get from https://cloud.mongodb.com)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/cinescape

# Redis URL (optional, for caching)
REDIS_URL=redis://localhost:6379

# ============ IMAGE HOSTING ============
# Cloudinary Configuration (get from https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============ DEPLOYMENT ============
# Frontend URL (set this to your Vercel deployment URL)
FRONTEND_URL=https://your-app.vercel.app

# Backend URL (set this to your Railway deployment URL)
BACKEND_URL=https://your-backend.railway.app

# Environment (development/production)
NODE_ENV=production

# ============ SECURITY ============
# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# ============ SCRAPING CONFIG ============
# Enable/Disable specific scrapers
ENABLE_IMDB_SCRAPER=false
ENABLE_CHROME_SCRAPERS=false
ENABLE_REDDIT_SCRAPER=true

# Scraping settings
SCRAPING_DELAY_MIN=3
SCRAPING_DELAY_MAX=10
MAX_RETRIES=2
TIMEOUT=30

# ============ LOGGING ============
LOG_LEVEL=INFO
USE_PROXY=false
